<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a1523066.pdumaresq_b52_l04.About"
    tools:showIn="@layout/activity_about"
    android:layout_weight="1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="About" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="Final Price v 1.0 \nSeptember 18, 2017 \nAuthor: Philip Dumaresq" />

    <TextView
        android:id="@+id/txtDoc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="A program to read a price from the user, then find the tax and total price for the selected region. Currently supports any province or territory in Canada. " />



</LinearLayout>
