<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a1523066.pdumaresq_b51_l06.BrowseInternet"
    tools:showIn="@layout/activity_browse_internet"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imbHeritageLogo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        app:srcCompat="@drawable/heritage_college_logo" />

    <EditText
        android:id="@+id/edtWebSite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"/>
    <Button
        android:id="@+id/btnSearch"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight=".3"
        android:text="Search" />

    <Spinner
      android:id="@+id/spnWebsites"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:entries="@array/sites">
    </Spinner>



</LinearLayout>
