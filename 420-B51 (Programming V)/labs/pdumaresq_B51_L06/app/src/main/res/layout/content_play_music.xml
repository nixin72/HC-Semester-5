<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a1523066.pdumaresq_b51_l06.PlayMusic"
    tools:showIn="@layout/activity_play_music"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <ImageButton
                android:id="@+id/imbColdplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/coldplay" />

            <ImageButton
                android:id="@+id/imbDemons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/demons" />
        </TableRow>
        <TableRow>
            <ImageButton
                android:id="@+id/imbHell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/hell" />

            <ImageButton
                android:id="@+id/imbTheBoxer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/theboxer" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" >
            <ImageButton
                android:id="@+id/imbRewind"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/imbPause"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_pause" />

            <ImageButton
                android:id="@+id/imbPlay"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/imbStop"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/picture_frame" />

            <ImageButton
                android:id="@+id/imbFastForward"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_ff" />
    </LinearLayout>
</LinearLayout>
