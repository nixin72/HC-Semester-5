<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MenuActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/btnDo"
        android:textSize="@dimen/btnString"
        android:layout_weight=".3"
        android:id="@+id/btnDo"
        android:background="@color/btnDo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_between"
        android:layout_marginTop="@dimen/margin_from_edge" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/btnPass"
        android:id="@+id/btnPass"
        android:layout_weight=".3"
        android:background="@color/btnPass"
        android:textSize="@dimen/btnString"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_between"
        android:layout_marginBottom="@dimen/margin_between" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/btnAbout"
        android:id="@+id/btnAbout"
        android:layout_weight=".3"
        android:background="@color/btnAbout"
        android:textSize="@dimen/btnString"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_between"
        android:layout_marginBottom="@dimen/margin_from_edge" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:text=""
        android:textSize="@dimen/btnString"
        android:id="@+id/tvResult"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
