<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Value to Search"
        android:id="@+id/tvLabel"
        android:labelFor="@+id/etValue"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etValue"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/tvLabel"
        android:inputType="number"
        android:maxHeight="20dp"
        android:width="10dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send It"
        android:id="@+id/btnSend"
        android:layout_below="@+id/etValue"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:id="@+id/tvResultLabel"
        android:layout_below="@+id/btnSend"
        android:layout_marginTop="44dp"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:text="Response"
        android:id="@+id/tvResult"
        android:layout_below="@+id/tvResultLabel"
        android:textSize="32sp"
        android:layout_alignParentEnd="false"
        android:background="#fff3ac" />
</RelativeLayout>
